@using OnlineTicariOtomasyon.Models.Siniflar

@model List<KargoDetay>


@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}


<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("aranacakDeger")
        <input type="submit" value="Ara" />
    </p>

}

<table class="table table-bordered" style="margin-top:20px">
    <tr>

        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>


    @foreach (KargoDetay kargo in Model)
    {
        <tr>
            <td>@kargo.Personel</td>
            <td>@kargo.Alici</td>
            <td>@kargo.TakipKodu</td>
            <td>@kargo.Tarih</td>

            <td><a href="/CariPanel/CariKargoTakip/@kargo.TakipKodu" class="btn btn-warning">Detaylar</a></td>

        </tr>
    }
</table>



