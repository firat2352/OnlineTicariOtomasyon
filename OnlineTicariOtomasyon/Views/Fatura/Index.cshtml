
@using OnlineTicariOtomasyon.Models.Siniflar
@model IEnumerable<Fatura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>


    @foreach (Fatura fatura in Model)
    {
        <tr>
            <td>@fatura.FaturaId</td>
            <td>@fatura.FaturaSeriNo</td>
            <td>@fatura.FaturaSiraNo</td>
            <td>@fatura.VergiDairesi</td>
            <td>@fatura.Tarih</td>
            <td>@fatura.Saat</td>
            <td>@fatura.TeslimEden</td>
            <td>@fatura.TeslimAlan</td>
            <td>@fatura.Toplam</td>
           
            <td><a href="/Fatura/FaturaGetir/@fatura.FaturaId" class="btn btn-warning" >Güncelle</a></td>
            <td><a href="/Fatura/FaturaDetay/@fatura.FaturaId" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Kaydı</a>

