
@using OnlineTicariOtomasyon.Models.Siniflar
@model IEnumerable<Fatura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        @*<th>Toplam</th>*@
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Popup</th>
        <th>Yeni Kalem</th>
    </tr>


    @foreach (Fatura fatura in Model)
    {
        <tr>
            <td>@fatura.FaturaSeriNo @fatura.FaturaSiraNo</td>
            <td>@fatura.Tarih</td>
            <td>@fatura.Saat</td>
            @*s<td>@fatura.Toplam</td>*@
           
            <td><a href="/Fatura/FaturaGetir/@fatura.FaturaId" class="btn btn-warning" >Güncelle</a></td>
            <td><a href="/Fatura/FaturaDetay/@fatura.FaturaId" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
            <td><a href="/Fatura/FaturaDetay/@fatura.FaturaId" class="btn btn-default" style="background-color:dodgerblue;color:white">Popup</a></td>
            <td><a href="/Fatura/FaturaDetay/@fatura.FaturaId" class="btn btn-default" style="background-color:thistle;color:white">Ek Kalem</a></td>
        </tr>
    }
</table>

<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Kaydı</a>

