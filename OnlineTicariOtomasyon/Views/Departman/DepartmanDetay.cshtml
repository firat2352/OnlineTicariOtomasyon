@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Departman Detay</h4>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.departmanAdi</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Personel Satışlar</th>
    </tr>

    @foreach (Personel personel in Model)
    {
        <tr>
            <td>@personel.PersonelId</td>
            <td>@personel.PersonelAd</td>
            <td>@personel.PersonelSoyad</td>
            <td>@personel.PersonelGorsel</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@personel.PersonelId" class="btn btn-default" style="background-color:darkorange">Satışlar</a></td>
        </tr>
    }



</table>
