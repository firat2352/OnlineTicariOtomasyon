@using OnlineTicariOtomasyon.Models.Siniflar

@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Departman</th>
        <th>Görsel</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>


    @foreach (Personel personel in Model)
    {
        <tr>
            <td>@personel.PersonelId</td>
            <td>@personel.PersonelAd</td>
            <td>@personel.PersonelSoyad</td>
            <td>@personel.Departman.DepartmanAd</td>
            <td><img src="@personel.PersonelGorsel" style="width:100px;height:100px"/></td>
            <td><a href="/Personel/PersonelGetir/@personel.PersonelId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@personel.PersonelId" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>